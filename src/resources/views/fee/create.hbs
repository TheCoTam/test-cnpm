<div class="mt-4">
    <h3>Thêm khoản phí</h3>
    <a href="/fee/show"><i class="bi bi-arrow-left-circle"></i> Quay lại</a>
    <form action="/fee/store" method="post">
        <div class="mb-3">
            <label for="description" class="form-label">Mã khoản phí</label>
            <input type="text" class="form-control" id="feeId" name="feeId" required>
        </div>
        <div class="mb-3">
            <label for="description" class="form-label">Tên khoản phí</label>
            <input type="text" class="form-control" id="name" name="name" required>
        </div>

        <div class="mb-3">
            <label for="description" class="form-label">Đơn giá</label>
            <input type="text" class="form-control" id="rate" name="rate" required>
        </div>

        <div class="mb-3">
            <label for="description" class="form-label">Loại khoản phí</label>
            <select class="form-select" name="type" aria-label="Default select example">
                <option value="Bắt buộc">Bắt buộc</option>
                <option value="Tự nguyện">Tự nguyện</option>
            </select>
        </div>
        
        <div class="mb-3">
            <label for="description" class="form-label">Hạn đóng</label>
            <input type="date" class="form-control" id="deadline" name="deadline" required>
        </div>

        <div class="mb-3">
            <label for="description" class="form-label">Ghi chú</label>
            <input type="text" class="form-control" id="note" name="note">
        </div>

        <button type="submit" class="btn btn-primary">ADD</button>
    </form>
</div>

