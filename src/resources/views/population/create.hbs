        </div>
    </div>
</div>

<script>
    const submitButton = document.getElementById('submitButton');
    var relationModal = new bootstrap.Modal(document.getElementById('relation-alert'));

    submitButton.onclick = function (e) {
        if ({{hasHouseholder}}) {
            e.preventDefault();
            relationModal.show();
        }
    }
</script>
